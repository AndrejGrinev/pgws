{
  "cookie_mask": "PGWS_SID=([\\d\\.]+)(;|$)",
  "error_500": "/error/",
  "site_is_hidden": 1,
  "post": { 
    "/pwl": "/pwl",
    "/api": "/api",
    "/api_cgi": "/cgi-bin/pwl.pl",
  },
  "def": {
    "sid": "app.sid_info",
    "acl": "info.acl_check",
    "uri": "ws.page_by_uri",
    "code": "ws.page_by_code",
  },
  "tmpl": {
    "debug": "1", # dump at page bottom
    "ext": ".tt2",
    "enc": "charset=utf-8",

    "error": "app/error",
    "config": "config",

    "pages": "page/",

    "layout_default": "style01",
    "skin_default": "default",

    "lang": {
      "allowed": ["ru", "en"],
      "default": "ru",
    },

    "include1": ["pkg/skindef/tmpl"]
  }
}
