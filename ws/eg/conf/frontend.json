{
  "cookie_mask": "PGWS_SID=([\\w+]+)==",
  "sid_arg":  "",
  "error_500": "/error/",
  "site_is_hidden": 1,
  "post": {
    "/pwl": "/pwl",
    "/api": "/api",
    "/api_cgi": "/cgi-bin/pwl.pl",
  },
  "def": {
    "sid": "acc.sid_info",
    "acl": "info.acl_check",
    "uri": "ws.page_by_uri",
    "code": "ws.page_by_code",
  },
  "tmpl": {
    "debug": "1", # dump at page bottom
    "ext": ".tt2",
    "enc": "charset=utf-8",

    "error": "app/error",
    "pages": "page/",

    "layout_default": "style01",
    "skin_default": "default",

    "lang": {
      "allowed": ["ru", "en"],
      "default": "ru",
    },

    "config": {
      "PRE_PROCESS": "config.tt2",
      "ENCODING":    "utf-8",
      "CACHE_SIZE":  100,
      "COMPILE_EXT": ".pm",
      "EVAL_PERL":   0,
      "PRE_CHOMP":   1,
      "POST_CHOMP":  1,
    }
  }
}
