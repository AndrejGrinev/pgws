{
  "pm": {
    "n_processes": 10,
    "die_timeout": 4,
    "pm_title": "tpro-job-dev"
  },
  "app": {
    "listen":  {
      "job_event": "job",
      "job_stat": "stat",
      "job_reload": "reload"
      },
    "sheduler": {
      "__mem_size"    : "< 2297 events",
      "mem_size"      : 131072,
      "reload_key"    : "secret_key",
      "cfg_sql"       : "",

      "event_timeout" : 60,
      "cron_predict"  : 50,
      "cron_every"    : 60,
    },
  },
  "sql": {
    "cron"  : "",
    "stat"  : "SELECT job.mgr_stat_load(?, ?, ?, ?, ?, ?, ?, ?, ?, ?)",
    "error" : "SELECT job.mgr_error_load(?, ?, ?, ?, ?)",

    "pid"    : "SELECT jq.last_pid()",
    "class"  : "SELECT *, jq.type_code(type_id) as type_code FROM jq.class",
    "next"   : "SELECT * FROM jq.task_next(?, ?)",
    "stop"   : "SELECT jq.task_end(?, ?, ?)",
    "create" : "SELECT job.event_create(jq.class_id(?, ?), ?, ?, ?, ?, ?, ?, ?)",
    "handler" : "SELECT jq.handler_%s_%s(?)",
    "handler_setof" : "SELECT * FROM jq.%s_%s(?)",
  }
}
